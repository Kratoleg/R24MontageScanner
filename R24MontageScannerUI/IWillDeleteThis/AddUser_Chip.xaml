<Window x:Class="R24MontageScannerUI.AddOrUpdateUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:R24MontageScannerUI"
        mc:Ignorable="d"
        Title="AddOrUpdateUser" Height="200" Width="800">
    <!--Change Size To the Same for Full UserLogin-->
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Label Content="Chip:" FontSize="22" Width="77"/>
            <TextBox x:Name="vorNameTextBox" MinWidth="150" Margin="10 0 0 0" KeyDown="eingangsScanTextBox_KeyDown" TabIndex="0" Width="204"  />
        </StackPanel>



    </Grid>
</Window>
